		description: "Site vitrine moderne pour psychologue",
		image: "/images/screenshots/psy-montpellier.png",
		url: "https://montpellier-psychologue.pro",
		location: "Montpellier"
	},
	{
		title: "Delphine Cima",
		description: "Site vitrine professionnel pour psychologue",
		image: "/images/screenshots/psy-manosque.png",
		url: "https://psychologue-manosque.net/",
		location: "Manosque"
	},
	{
		title: "Marie-Josée GRASSO",
		description: "Site vitrine moderne pour psychologue",
		image: "/images/screenshots/psy-sorgues.png",
		url: "https://psychologue-sorgues.fr/",
		location: "Sorgues"
	},
	{
		title: "Emanuelle FALLIGAN",
		description: "Site vitrine professionnel pour psychologue",
		image: "/images/screenshots/psy-sarrebourg.png",
		url: "https://psychologue-sarrebourg.fr/",
		location: "Sarrebourg"
	},
	{
		title: "Stéphanie REQUET-CATINEAN",
		description: "Site vitrine moderne pour psychologue",
		image: "/images/screenshots/psy-andrezieux.jpg",
		url: "https://psychologue-andrezieux-boutheon.fr/",
		location: "Andrézieux-Bouthéon"
	},
	{
		title: "Thomas Mouries",
		description: "Site vitrine pour ostéopathe D.O avec spécialisations",
		image: "/images/screenshots/osteopathe-toulouse-mouries.png",
		url: "https://osteopathe-toulouse-mouries.fr/",
		location: "Toulouse"
	},
	{
