import Layout from '../layouts/Layout.astro';



const psychologueProjects = [
	{
		title: "Séverine Reisser",
		description: "Site vitrine professionnel pour psychologue",
		image: "/images/screenshots/psychologue-leslilas.png",
		url: "https://psychologue-leslilas.fr/",
		location: "Les Lilas"
	},
	{
		title: "Audrey Larcebau",
		description: "Site vitrine moderne pour psychologue",
		image: "/images/screenshots/psy-emdr-cotebasque.fr.png",
		url: "https://psy-emdr-cotebasque.fr",
		location: "Anglet"
	},
	{
		title: "Ludivine Cazas Audureau",
		description: "Site vitrine professionnel pour psychologue",
		image: "/images/screenshots/cazas-audureau.jpg",
		url: "https://psychologue-limoges.fr/",
		location: "Limoges"
	},
	{
